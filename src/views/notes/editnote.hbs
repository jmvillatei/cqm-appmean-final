<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/editnote/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="from-control" placeholder="Title" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="from-control">{{note.description}}</textarea>
                </div>
                <button class="btn btn-primary btn-block" type="submit">
                    save <i class='far fa-save'></i></button>
                </button>
            </form>
        </div>
    </div>
</div>