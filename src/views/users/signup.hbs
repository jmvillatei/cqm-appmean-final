<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">Account</div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" name="username" class="form-control" placeholder="Username" value="{{username}}" required>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="e-mail" value="{{email}}" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="pwd" class="form-control" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="repwd" class="form-control" placeholder="Confirm Password" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="bnt btn-success btn-block"><i style='font-size:24px'
                                class='fas'>&#xf4fc;</i></button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>