<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3 class="card-title d-flex justify-content-between align-items-center">Sign In<i
                        class='fas fa-lock-open' style='font-size:100%;'></i></h3>
            </div>

            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="text" name="username" class="form-control" placeholder="Username"
                            value="{{username}}" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="pwd" class="form-control" placeholder="Password" value="{{email}}"
                            required>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="bnt btn-success btn-block"><i
                                class='fas fa-power-off'></i></button></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>